{
  "name": "tooling.report",
  "private": true,
  "scripts": {
    "build": "rollup -c && node lib/move-output.js",
    "debug": "node --inspect-brk node_modules/.bin/rollup -c",
    "dev": "rollup -cw & npm run serve",
    "serve": "http-server -c-1 .tmp/build/static | head -5",
    "linktests": "ln -s '../../../tests' .tmp/build/static/tests",
    "atest": "cd \"tests/$TEST\" && npm i --no-progress --no-fund --no-audit --prefer-offline --cache-min 9999999 --no-package-lock && npm run -s build"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@types/prismjs": "^1.16.1",
    "async-disk-cache": "^2.1.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "lodash.camelcase": "^4.3.0",
    "marked": "^1.1.0",
    "node-fetch": "^2.6.0",
    "pnpm": "^4.14.4",
    "postcss": "^7.0.36",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^3.2.0",
    "postcss-nested": "^4.2.2",
    "postcss-url": "^8.0.0",
    "preact": "^10.4.5",
    "preact-render-to-string": "^5.1.9",
    "prettier": "^1.19.1",
    "prismjs": "^1.20.0",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12"
  }
}
