{
  "name": "buildoff",
  "private": true,
  "scripts": {
    "build": "rollup -c && node lib/move-output.js",
    "dev": "rollup -cw & npm run serve",
    "serve": "http-server -c-1 .tmp/build/static"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "glob": "^7.1.6",
    "http-server": "^0.12.1",
    "husky": "^4.0.7",
    "lint-staged": "^10.0.1",
    "postcss": "^7.0.26",
    "postcss-nested": "^4.2.1",
    "postcss-url": "^8.0.0",
    "preact": "^10.2.1",
    "preact-render-to-string": "^5.1.3",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-terser": "^5.2.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
